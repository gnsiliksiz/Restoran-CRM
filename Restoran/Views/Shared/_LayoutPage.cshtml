<!DOCTYPE html>
<html lang="en">
<head>

    <!-- Meta -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Title -->
    <title>ibernsoftGRMS  </title>

    <!-- Favicons -->
    <link rel="shortcut icon" href="~/WebContent/assets/img/favicon.png">
    <link rel="apple-touch-icon" href="~/WebContent/assets/img/favicon_60x60.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/WebContent/assets/img/favicon_76x76.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/WebContent/assets/img/favicon_120x120.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/WebContent/assets/img/favicon_152x152.png">

    <!-- CSS Plugins -->
    <link rel="stylesheet" href="~/WebContent/assets/plugins/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/WebContent/assets/plugins/slick-carousel/slick/slick.css" />
    <link rel="stylesheet" href="~/WebContent/assets/plugins/animate.css/animate.min.css" />
    <link rel="stylesheet" href="~/WebContent/assets/plugins/animsition/dist/css/animsition.min.css" />

    <!-- CSS Icons -->
    <link rel="stylesheet" href="~/WebContent/assets/css/themify-icons.css" />
    <link rel="stylesheet" href="~/WebContent/assets/plugins/font-awesome/css/font-awesome.min.css" />

    <!-- CSS Theme -->
    <link id="theme" rel="stylesheet" href="~/WebContent/assets/css/themes/theme-beige.min.css" />


    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">*@
   

    <link href="~/WebContent/vertical-menu.css" rel="stylesheet" />



    

    <style>
        .footerr {
            position: fixed;
            left: 0;
            bottom: 0px;
            height: 25px;
            width: 100%;
            background-color: black;
            color: black;
            text-align: center;
        }
    </style>
</head>

<body style="margin-top:0px;">

    <!-- Body Wrapper -->
    <div id="body-wrapper" class="animsition" style="margin-top:0px;">

        <!-- Header -->
        <header id="header" class="center">

            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <!-- Logo -->

                    </div>
                    <div class="col-md-10">
                        <!-- Navigation -->
                        <nav class="module module-navigation center mr-4">
                            <ul id="nav-main" class="nav nav-main">



                                @Html.Action("GetMenu", "Kategori")



                            </ul>
                        </nav>
                    </div>

                    @RenderSection("Sepet", false)

                </div>
            </div>

        </header>
        <!-- Header / End -->
        <!-- Header -->
        <header id="header-mobile" class="light">

            <div class="module module-nav-toggle">
                <a href="#" id="nav-toggle" data-toggle="panel-mobile">
                    <span></span><span></span><span></span><span></span>


                </a>

            </div>
            <div class="ver">
                <span class="verver">
                    <i class="ti ti-hand-point-left"> SİPARİS VER!</i>
                </span>
            </div>

            @* LOGO GELECEK MOBİLDE GÖRÜB*@

            <div class="module module-logo">

                <a href="index.html">

                    <img src="~/Content/app-assets/images/logo/o_siyah.png" />

                </a>
            </div>

            <a href="#" class="module module-cart" data-toggle="panel-cart">
                @*<i class="ti ti-shopping-cart"></i>*@
                <img src="~/WebContent/assets/supermarket (2).png" />

                <span class="notification">@ViewBag.count</span>
                @if (ViewBag.totalprice != 0)
                {
                    <span class="cart-value">@ViewBag.totalprice ₺</span>
                }
                else
                {
                    <span class="cart-value">@ViewBag.totalprice ₺</span>
                }

            </a>

        </header>
        <!-- Header / End -->
        <!-- Content -->
        <div id="content">

            @RenderBody()





            <!-- Footer -->
            <!-- Footer -->
            <footer id="footer" class="bg-white">

                <div class="container">
                    <!-- Footer 1st Row -->
                    <!-- Footer 2nd Row -->
                    <div class="footerr">
                        <span class="text-muted">ibernsoftGRMS 2020 By Ibernsoft Yazılım</span>
                    </div>
                </div>

                <!-- Back To Top -->
                <a href="#" id="back-to-top"><i class="ti ti-angle-up"></i></a>

            </footer>
            <!-- Footer / End -->


        </div>
        <!-- Content / End -->
        <!-- Panel Mobile -->
        <nav id="panel-mobile">
            <div class="module module-logo bg-black dark">
                <a href="#">

                    @*<img src="~/WebContent/assets/img/logo_beyaz.png" />*@<span>SİZİN LOGONUZ</span>
                </a>
                <button class="close" data-toggle="panel-mobile">  <span>KAPAT</span></button>



            </div>
            <nav class="module module-navigation"></nav>
            <div class="module module-social">
                <h6 class="text-sm mb-3">Bizi Takip ET!</h6>
                <a href="https://ibernsoft.com.tr/" class="icon icon-social icon-circle icon-sm icon-facebook"><i class="fa fa-facebook"></i></a>
                <a href="https://tr.linkedin.com/company/ibernsoft-yaz%C4%B1l%C4%B1m" class="icon icon-social icon-circle icon-sm icon-google"><i class="fa fa-linkedin"></i></a>
                <a href="#" class="icon icon-social icon-circle icon-sm icon-instagram"><i class="fa fa-instagram"></i></a>
            </div>
            <div class="module module-social">
                @Html.Action("GetButton", "TalepWeb")
            </div>

        </nav>


        <div id="body-overlay"></div>

    </div>

    @*@RenderSection("script", false);*@
    <!-- JS Plugins -->
    <script src="~/WebContent/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script src="~/WebContent/assets/plugins/tether/dist/js/tether.min.js"></script>
    <script src="~/WebContent/assets/plugins/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/WebContent/assets/plugins/slick-carousel/slick/slick.min.js"></script>
    <script src="~/WebContent/assets/plugins/jquery.appear/jquery.appear.js"></script>
    <script src="~/WebContent/assets/plugins/jquery.scrollto/jquery.scrollTo.min.js"></script>
    <script src="~/WebContent/assets/plugins/jquery.localscroll/jquery.localScroll.min.js"></script>
    <script src="~/WebContent/assets/plugins/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/WebContent/assets/plugins/jquery.mb.ytplayer/dist/jquery.mb.YTPlayer.min.js"></script>
    <script src="~/WebContent/assets/plugins/twitter-fetcher/js/twitterFetcher_min.js"></script>
    <script src="~/WebContent/assets/plugins/skrollr/dist/skrollr.min.js"></script>
    <script src="~/WebContent/assets/plugins/animsition/dist/js/animsition.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <!-- JS Core -->
    @*<script src="https://code.jquery.com/jquery-1.12.4.js"></script>*@


    <script src="~/WebContent/assets/js/core.js"></script>


    @RenderSection("script", false);
</body>
</html>
