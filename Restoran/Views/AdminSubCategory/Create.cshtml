@model ibernsof_Restoran.Models.AltKategori
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-12 mb-2 mt-1">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h5 class="content-header-title float-left pr-1 mb-0">Ekle</h5>
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb p-0 mb-0">
                        <li class="breadcrumb-item">
                            <a href="../AdminHome/Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="../Index">Alt Kategori</a>
                        </li>
                        <li class="breadcrumb-item active">
                          Alt  Kategori Ekle
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<section id="form-control-repeater">
    <div class="row">
        <!-- file repeater  -->
        <div class="col-xl-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><b>Alt Kategori Oluştur</b></h4>
                </div>
                <div class="card-content">
                    <div class="card-body">

                        @using (Html.BeginForm("Create", "AdminSubCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                        <div class="form-horizontal">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label col-md-2">Alt Kategori Adı</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.altKatAdi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.altKatAdi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Alt Kategori Sira</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.altKatsira, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.altKatsira, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Alt Kategori Durum</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.altKatDurum, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.altKatDurum, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Alt Kategori Fotoğraf</label>
                                <div class="col-md-10">
                                    <input type="file" name="altKategoriResim" id="altKategoriResim" value="" accept=".jpg,.png,.gif,.JPEG,.jpeg" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.altKatResim, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Kategori Seç</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("kategoriID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.kategoriID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-xl-3 col-md-4 col-3" align="right">
                                <div class="card invoice-action-wrapper shadow-none border">

                                    <div class="invoice-action-btn">
                                        <button class="btn btn-light-primary btn-block">
                                            <i class="bx bxs-categories"><span> Ekle</span></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- /file repeater -->

    </div>
</section>
