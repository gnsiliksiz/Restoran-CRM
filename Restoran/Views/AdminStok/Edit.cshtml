@model ibernsof_Restoran.Models.Urun
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-12 mb-2 mt-1">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h5 class="content-header-title float-left pr-1 mb-0">Duzenle</h5>
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb p-0 mb-0">
                        <li class="breadcrumb-item">
                            <a href="../AdminHome/Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="Index">Urun</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Stok Duzenle
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Ürün Düzenle</h3>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("Edit", "AdminStok", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("urunID")
            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                


                
                <div class="form-group">
                    <label class="control-label col-md-2">Stok Duzenle</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.urunStok, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.urunStok, "", new { @class = "text-danger" })
                    </div>
                </div>

               

                

                <div class="col-xl-3 col-md-4 col-12">
                    <div class="card invoice-action-wrapper shadow-none border">

                        <div class="invoice-action-btn">
                            <button class="btn btn-light-primary btn-block">
                                <i class="bx bx-group"><span>Guncelle</span></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

