@model ibernsof_Restoran.Models.MusteriIstek

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-12 mb-2 mt-1">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h5 class="content-header-title float-left pr-1 mb-0">Duzenle</h5>
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb p-0 mb-0">
                        <li class="breadcrumb-item">
                            <a href="../AdminHome/Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="Index">Musteri Talep</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Talep Duzenle
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<section id="form-control-repeater">
    <div class="row">
        <!-- file repeater  -->
        <div class="col-xl-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><b>Kategori Düzenle</b></h3>
                </div>


                <div class="card-body">

                    @using (Html.BeginForm("Edit", "AdminMusteriIstek", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.musteriIstekID)

                        <div class="col-md-6 col-sm-12 form-group">
                            <label class="control-label col-md-6">Kategori Ad</label>
                            @Html.EditorFor(model => model.musteriIstekAdi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.musteriIstekAdi, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Icon Fotoğraf</label>
                            <div class="col-md-10">
                                <input type="file" name="iconResim" id="iconResim" value="" accept=".jpg,.png,.gif,.JPEG,.jpeg" class="form-control" />
                                @Html.ValidationMessageFor(model => model.iconSinifAdi, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="col-xl-3 col-md-4 col-3" align="right">
                            <div class="card invoice-action-wrapper shadow-none border">

                                <div class="invoice-action-btn">
                                    <button class="btn btn-light-success btn-block">
                                        <i class="bx bxs-categories"><span> Guncelle</span></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>



            </div>
        </div>
    </div>
</section>